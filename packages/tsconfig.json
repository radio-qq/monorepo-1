{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["src/*"],
      "@components": ["src/components"]
    },
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "vueCompilerOptions": {
    "target": 3
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.vue",
    "./components.d.ts",
    "../types"
  ]
}
